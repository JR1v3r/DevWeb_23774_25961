    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Nenhum livro encontrado para a sua pesquisa.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var livro in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100 shadow-sm" style="cursor: pointer;" onclick="window.location.href='@Url.Action("Details", "Livros", new { id = livro.Id })'">
                        <img src="@livro.Capa" class="card-img-top" style="height: 250px; object-fit: cover;" alt="Capa do Livro">
                        <div class="card-body">
                            <h5 class="card-title">@livro.Titulo</h5>
                            <p class="card-text text-muted">Autor: @livro.Autor</p>
                            <p class="card-text"><small>ISBN: @livro.ISBN</small></p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>