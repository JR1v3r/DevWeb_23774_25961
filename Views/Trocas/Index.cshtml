@model IEnumerable<Trocas>

@{
    ViewData["Title"] = "Trocas";
}

<h1>Trocas</h1>

<div class="d-flex flex-column min-vh-20">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm py-2">
            <div class="container-fluid flex-column">
                <!-- Bottom Row: Links -->
                <div class="w-20 d-flex justify-content-center">
                    <ul class="nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Livros">Livros</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Trocas">Trocas</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LivroDado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LivroRecebido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vendedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comprador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Timestamp)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LivroDado.Autor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LivroRecebido.Autor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vendedor.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comprador.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Timestamp)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
