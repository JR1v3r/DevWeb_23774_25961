@model DevWeb_23774_25961.Models.Trocas
@{
    ViewData["Title"] = "Propor troca";
}

<h1 class="mb-4">Propor troca</h1>

<div class="row">
    <!-- LEFT COLUMN: Book Offered -->
    <div class="col-md-6">
        <h5>Livro disponível para troca:</h5>
        <div class="card">
            <img src="@Model.LivroDado?.Capa" class="card-img-top" alt="Book cover" />
            <div class="card-body">
                <h5 class="card-title">@Model.LivroDado?.Titulo</h5>
                <p class="card-text"><strong>Autor:</strong> @Model.LivroDado?.Autor</p>
                <p class="card-text"><strong>Utilizador:</strong> @Model.Vendedor?.UserName</p>
            </div>
        </div>
    </div>

    <!-- RIGHT COLUMN: Select Your Book -->
    <div class="col-md-6">
        <h5>Escolha um livro da sua coleção para oferecer:</h5>

        <form method="post" asp-action="TradeProposal" >
            @Html.AntiForgeryToken()
            <input type="hidden" name="Id" value="@Model.Id" />

            <div class="mb-3">
                <label for="IdLivroRecebido" class="form-label">O seu livro</label>
                <select asp-for="IdLivroRecebido" class="form-select" asp-items="ViewBag.LivrosDisponiveis">
                    <option disabled selected>-- Escolha um livro --</option>
                </select>
            </div>
            <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Enviar proposta</a>
            
        </form>
    </div>
</div>

<div class="mt-3">
    <a onclick="window.history.back()" class="btn btn-outline-primary">Voltar</a>
</div>
